try {
    # vROps API URL ve kimlik bilgileri
    $vROpsServer = "https://vrops-server-url"
    $Username = "your-username"
    $Password = "your-password"

    # Kimlik doğrulaması için temel (basic) kimlik bilgilerini base64 formatında oluşturma
    $base64AuthInfo = [Convert]::ToBase64String([Text.Encoding]::ASCII.GetBytes(("${Username}:${Password}")))

    # API endpoint URL'si
    $apiUrl = "$vROpsServer/suite-api/api/clusters"

    # SSL sertifikası hatalarını atla (opsiyonel)
    [System.Net.ServicePointManager]::ServerCertificateValidationCallback = { $true }

    # API çağrısı yapmak için Invoke-RestMethod kullanımı
    $response = Invoke-RestMethod -Uri $apiUrl -Method Get -Headers @{
        Authorization = "Basic $base64AuthInfo"
    } -ContentType "application/json"

    # API çağrısından dönen sonuçları ekrana yazdırma
    $response
} catch {
    Write-Host "Error: $($_.Exception.Message)"
}


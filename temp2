<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Pie Chart - dış etiketli (Chart.js)</title>
  <style>
    body { 
      font-family: Arial, Helvetica, sans-serif;
      display: flex; 
      align-items: center; 
      justify-content: center; 
      height: 100vh; 
      margin: 0;
      background: #f7f8fb;
    }
    .card {
      background: white;
      padding: 24px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.06);
      border-radius: 8px;
      width: 720px;
      max-width: 95%;
    }
    canvas { display:block; width:100%; height:520px; }
  </style>
</head>
<body>
  <div class="card">
    <canvas id="myPie"></canvas>
  </div>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script>
    // --- Veriler (görseldeki rakamlar) ---
    const labels = ['Kategori A', 'Kategori B', 'Kategori C'];
    const values = [329, 106, 32];
    const colors = ['#3234d9', '#2ec4b6', '#b76aa6']; // mavi, yeşil, mor - istediğin gibi değiştir

    // --- Özel plugin: dışa etiketler & bağlantı çizgileri çiziyor ---
    const outsideLabelPlugin = {
      id: 'outsideLabels',
      afterDraw(chart, args, options) {
        const {ctx} = chart;
        const dataset = chart.data.datasets[0];
        const meta = chart.getDatasetMeta(0);
        const total = dataset.data.reduce((a,b)=>a+b,0);

        ctx.save();
        // görsel ayarlar (opsiyon üzerinden değiştirilebilir)
        const lineColor = options.lineColor || '#6b7280';
        const textColor = options.textColor || '#111827';
        const fontSize = options.fontSize || 13;
        const lineLength = options.lineLength || 20;
        const labelPadding = options.labelPadding || 8;
        ctx.font = fontSize + 'px Arial';
        ctx.textBaseline = 'middle';

        meta.data.forEach((arc, i) => {
          const value = dataset.data[i];
          const percent = (value / total) * 100;
          const startAngle = arc.startAngle;
          const endAngle = arc.endAngle;
          const midAngle = (startAngle + endAngle) / 2;

          const cx = arc.x;
          const cy = arc.y;
          const r = arc.outerRadius;

          // çizgi başlangıç ve bitiş noktaları
          const sx = cx + Math.cos(midAngle) * (r * 0.92);
          const sy = cy + Math.sin(midAngle) * (r * 0.92);
          const ex = cx + Math.cos(midAngle) * (r + lineLength);
          const ey = cy + Math.sin(midAngle) * (r + lineLength);

          // yatay son segment (etiketin hangi tarafta olacağına göre sola/sağa)
          const alignRight = Math.cos(midAngle) >= 0;
          const hx = ex + (alignRight ? labelPadding : -labelPadding);

          // çizgiyi çiz
          ctx.beginPath();
          ctx.strokeStyle = lineColor;
          ctx.lineWidth = 1;
          ctx.moveTo(sx, sy);
          ctx.lineTo(ex, ey);
          ctx.lineTo(hx, ey);
          ctx.stroke();

          // etiket metni: "329 (70.45%)"
          const text = `${value} (${percent.toFixed(2)}%)`;
          ctx.fillStyle = textColor;
          ctx.textAlign = alignRight ? 'left' : 'right';
          const tx = hx + (alignRight ? 6 : -6);
          ctx.fillText(text, tx, ey);
        });

        ctx.restore();
      }
    };

    // Chart oluşturma
    Chart.register(outsideLabelPlugin);

    const ctx = document.getElementById('myPie').getContext('2d');
    const myChart = new Chart(ctx, {
      type: 'pie',
      data: {
        labels: labels,
        datasets: [{
          data: values,
          backgroundColor: colors,
          borderWidth: 0
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { display: false }, // legend kapalı (grafikteki gibi)
          tooltip: {
            callbacks: {
              label: function(context) {
                const v = context.raw;
                const total = context.dataset.data.reduce((a,b)=>a+b,0);
                const pct = (v / total) * 100;
                return `${v} — ${pct.toFixed(2)}%`;
              }
            }
          }
        }
      },
      plugins: [{
        id: 'configureOutsideLabelPlugin',
        beforeInit(chart) {
          // plugin'e default opsiyonları geçir
          if (!chart.options.plugins.outsideLabels) {
            chart.options.plugins.outsideLabels = {
              lineColor: '#6b7280',
              textColor: '#111827',
              fontSize: 13,
              lineLength: 22,
              labelPadding: 12
            };
          }
        }
      }]
    });

    // plugin'i Chart'ta aktif et (options üzerinden alınacak)
    myChart.options.plugins.outsideLabels = {
      lineColor: '#6b7280',
      textColor: '#111827',
      fontSize: 13,
      lineLength: 22,
      labelPadding: 12
    };
    myChart.update();
  </script>
</body>
</html>

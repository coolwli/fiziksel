using System;
using System.Collections.Generic;
using System.Data.SqlClient;
using System.Web.UI;

namespace historicDatas
{
    public partial class _default : System.Web.UI.Page
    {
        private readonly string connectionString = @"Data Source=TEKSCR1\SQLEXPRESS;Initial Catalog=CloudUnited;Integrated Security=True";

        protected void Page_Load(object sender, EventArgs e)
        {
            if (!IsPostBack)
            {
                string sqlQuery = "SELECT * FROM fiziksel_historic";
                var allDatas = GetAllDatasets(sqlQuery);
                DisplayData(allDatas);
            }
        }

        private (List<string> Dates, Dictionary<string, Dictionary<string, List<int>>> Datasets) GetAllDatasets(string query)
        {
            var dates = new List<string>();
            var datasets = new Dictionary<string, Dictionary<string, List<int>>>();

            using (var con = new SqlConnection(connectionString))
            {
                con.Open();
                using (var cmd = new SqlCommand(query, con))
                {
                    using (var reader = cmd.ExecuteReader())
                    {
                        while (reader.Read())
                        {
                            ProcessRow(reader, datasets, dates);
                        }
                    }
                }
            }

            return (dates, datasets);
        }

        private void ProcessRow(SqlDataReader reader, Dictionary<string, Dictionary<string, List<int>>> datasets, List<string> dates)
        {
            // Capture the date as a string and add it to the dates list
            dates.Add(reader[0].ToString()); // Adjust index if needed

            // Process fixed columns
            AddFixedValue(datasets, "total_core", "total_core", Convert.ToInt32(reader["total_core"])); // Adjust column name
            AddFixedValue(datasets, "total_memory", "total_memory", Convert.ToInt32(reader["total_memory"])); // Adjust column name

            // Process dynamic company values
            for (int i = 1; i < reader.FieldCount; i++)
            {
                var columnName = reader.GetName(i);
                var value = reader.GetValue(i).ToString();
                ProcessDynamicValues(value, columnName, datasets);
            }
        }

        private void AddFixedValue(Dictionary<string, Dictionary<string, List<int>>> datasets, string key, string columnName, int value)
        {
            if (!datasets.ContainsKey(key))
            {
                datasets[key] = new Dictionary<string, List<int>>();
                datasets[key][columnName] = new List<int>();
            }

            datasets[key][columnName].Add(value);
        }

        private void ProcessDynamicValues(string value, string columnName, Dictionary<string, Dictionary<string, List<int>>> datasets)
        {
            var entries = value.Split(new[] { '~' }, StringSplitOptions.RemoveEmptyEntries);

            foreach (var entry in entries)
            {
                var parts = entry.Split('|');

                if (parts.Length == 2 && int.TryParse(parts[1], out int number))
                {
                    var element = parts[0].Trim();

                    if (!datasets.ContainsKey(element))
                    {
                        datasets[element] = new Dictionary<string, List<int>>();
                    }

                    if (!datasets[element].ContainsKey(columnName))
                    {
                        datasets[element][columnName] = new List<int>();
                    }

                    datasets[element][columnName].Add(number);
                }
            }
        }

        private void DisplayData((List<string> Dates, Dictionary<string, Dictionary<string, List<int>>> Datasets) allDatas)
        {
            Response.Write("<h3>Dates</h3>");
            foreach (var date in allDatas.Dates)
            {
                Response.Write($"{date}<br />");
            }

            foreach (var category in allDatas.Datasets)
            {
                Response.Write($"<h3>{category.Key}</h3>");

                foreach (var column in category.Value)
                {
                    Response.Write($"<strong>Column: {column.Key}</strong><br />");
                    Response.Write("Values: ");

                    foreach (var value in column.Value)
                    {
                        Response.Write($"{value} ");
                    }

                    Response.Write("<br /><br />");
                }
            }
        }
    }
}

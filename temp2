<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Dinamik Pie Charts - dış etiketli</title>
  <style>
    body { 
      font-family: Arial, sans-serif;
      background: #f7f8fb;
      padding: 20px;
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }
    .card {
      background: white;
      padding: 24px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.06);
      border-radius: 8px;
      width: 360px;
      height: 420px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .card h3 {
      margin: 0 0 10px;
      font-size: 16px;
      color: #333;
    }
    canvas { width: 100%; height: 320px; }
  </style>
</head>
<body>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script>
    // 1️⃣ Tüm chart verileri burada
    const datas = {
      chart1: {
        title: "Satış Dağılımı",
        labels: ['Kategori A', 'Kategori B', 'Kategori C'],
        values: [329, 106, 32],
        colors: ['#3234d9', '#2ec4b6', '#b76aa6']
      },
      chart2: {
        title: "Kullanıcı Türleri",
        labels: ['Ücretsiz', 'Standart', 'Premium'],
        values: [120, 75, 45],
        colors: ['#ff9800', '#4caf50', '#f44336']
      }
    };

    // 2️⃣ Dış etiket plugin'i
    const outsideLabelPlugin = {
      id: 'outsideLabels',
      afterDraw(chart, args, options) {
        const {ctx} = chart;
        const dataset = chart.data.datasets[0];
        const meta = chart.getDatasetMeta(0);
        const total = dataset.data.reduce((a,b)=>a+b,0);

        ctx.save();
        const lineColor = options.lineColor || '#6b7280';
        const textColor = options.textColor || '#111827';
        const fontSize = options.fontSize || 13;
        const baseLineLength = options.lineLength || 20;
        const labelPadding = options.labelPadding || 8;
        ctx.font = fontSize + 'px Arial';
        ctx.textBaseline = 'middle';

        meta.data.forEach((arc, i) => {
          const value = dataset.data[i];
          const percent = (value / total) * 100;
          const midAngle = (arc.startAngle + arc.endAngle) / 2;
          const cx = arc.x;
          const cy = arc.y;
          const r = arc.outerRadius;

          const angleDeg = midAngle * (180 / Math.PI);
          let lineLength = baseLineLength;
          if (angleDeg < -60 || angleDeg > 60) {
            lineLength = baseLineLength - 6; 
          }

          const sx = cx + Math.cos(midAngle) * (r * 0.92);
          const sy = cy + Math.sin(midAngle) * (r * 0.92);
          const ex = cx + Math.cos(midAngle) * (r + lineLength);
          const ey = cy + Math.sin(midAngle) * (r + lineLength);

          const alignRight = Math.cos(midAngle) >= 0;
          const hx = ex + (alignRight ? labelPadding : -labelPadding);

          ctx.beginPath();
          ctx.strokeStyle = lineColor;
          ctx.lineWidth = 1;
          ctx.moveTo(sx, sy);
          ctx.lineTo(ex, ey);
          ctx.lineTo(hx, ey);
          ctx.stroke();

          const text = `${value} (${percent.toFixed(2)}%)`;
          ctx.fillStyle = textColor;
          ctx.textAlign = alignRight ? 'left' : 'right';
          const tx = hx + (alignRight ? 6 : -6);
          ctx.fillText(text, tx, ey);
        });

        ctx.restore();
      }
    };

    Chart.register(outsideLabelPlugin);

    // 3️⃣ Her chart için HTML & Chart.js instance oluştur
    Object.keys(datas).forEach((key, index) => {
      const chartData = datas[key];

      // Card div
      const card = document.createElement('div');
      card.className = 'card';

      // Başlık
      const title = document.createElement('h3');
      title.textContent = chartData.title;
      card.appendChild(title);

      // Canvas
      const canvas = document.createElement('canvas');
      canvas.id = key;
      card.appendChild(canvas);

      // Body'ye ekle
      document.body.appendChild(card);

      // Chart.js
      new Chart(canvas.getContext('2d'), {
        type: 'pie',
        data: {
          labels: chartData.labels,
          datasets: [{
            data: chartData.values,
            backgroundColor: chartData.colors,
            borderWidth: 0
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          layout: { padding: 30 },
          plugins: {
            legend: {
              display: true,
              position: 'bottom',
              labels: { boxWidth: 14, padding: 8 }
            },
            tooltip: {
              callbacks: {
                label: function(context) {
                  const v = context.raw;
                  const total = context.dataset.data.reduce((a,b)=>a+b,0);
                  const pct = (v / total) * 100;
                  return `${v} — ${pct.toFixed(2)}%`;
                }
              }
            },
            outsideLabels: {
              lineColor: '#6b7280',
              textColor: '#111827',
              fontSize: 13,
              lineLength: 22,
              labelPadding: 12
            }
          }
        }
      });
    });
  </script>
</body>
</html>

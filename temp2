<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <title>Pie Chart Tasarım</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      font-family: sans-serif;
      background: #f9f9f9;
      padding: 20px;
    }
    .card {
      background: white;
      border-radius: 10px;
      padding: 15px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      width: 300px;
      height: 350px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    h3 {
      text-align: center;
      font-size: 16px;
      margin: 0 0 10px;
    }
    canvas {
      flex: 1;
    }
  </style>
</head>
<body>

<script>
  // Sabit renk paleti (label bazlı)
  const colorPalette = {
    "Kategori A": "#3234d9",
    "Kategori B": "#2ec4b6",
    "Kategori C": "#b76aa6",
    "Ücretsiz": "#ff9800",
    "Standart": "#4caf50",
    "Premium": "#f44336"
  };

  const datas = {
    chart1: {
      title: "Satış Dağılımı",
      labels: ['Kategori A', 'Kategori B', 'Kategori C'],
      values: [329, 106, 32]
    },
    chart2: {
      title: "Kullanıcı Türleri",
      labels: ['Ücretsiz', 'Standart', 'Premium'],
      values: [120, 75, 45]
    }
  };

  // --- Toplam veriyi oluştur ---
  const totalMap = {};
  Object.values(datas).forEach(chart => {
    chart.labels.forEach((label, i) => {
      if (!totalMap[label]) {
        totalMap[label] = 0;
      }
      totalMap[label] += chart.values[i];
    });
  });

  const totalLabels = Object.keys(totalMap);
  const totalValues = Object.values(totalMap);

  // --- Mevcut chart'ları ekle ---
  Object.keys(datas).forEach((key) => {
    createChartCard(datas[key], key);
  });

  // --- Toplam chart'ı ekle ---
  createChartCard({
    title: "Toplam Dağılım",
    labels: totalLabels,
    values: totalValues
  }, "totalChart");

  function createChartCard(chartData, canvasId) {
    const card = document.createElement('div');
    card.className = 'card';

    const title = document.createElement('h3');
    title.textContent = chartData.title;
    card.appendChild(title);

    const canvas = document.createElement('canvas');
    canvas.id = canvasId;
    card.appendChild(canvas);

    document.body.appendChild(card);

    const colors = chartData.labels.map(label => colorPalette[label] || randomColor());

    new Chart(canvas.getContext('2d'), {
      type: 'pie',
      data: {
        labels: chartData.labels,
        datasets: [{
          data: chartData.values,
          backgroundColor: colors,
          borderWidth: 0
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        layout: { padding: 10 },
        plugins: {
          legend: {
            display: true,
            position: 'bottom',
            labels: { boxWidth: 14, padding: 8 }
          },
          tooltip: {
            callbacks: {
              label: function(context) {
                const v = context.raw;
                const total = context.dataset.data.reduce((a,b)=>a+b,0);
                const pct = (v / total) * 100;
                return `${v} — ${pct.toFixed(2)}%`;
              }
            }
          }
        }
      }
    });
  }

  // Eğer label için renk tanımlı değilse rastgele üret
  function randomColor() {
    return `hsl(${Math.floor(Math.random()*360)}, 60%, 55%)`;
  }
</script>

</body>
</html>

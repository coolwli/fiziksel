<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Pie Chart - dış etiket + legend</title>
  <style>
    body { 
      font-family: Arial, sans-serif;
      display: flex; 
      align-items: center; 
      justify-content: center; 
      height: 100vh; 
      margin: 0;
      background: #f7f8fb;
    }
    .card {
      background: white;
      padding: 24px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.06);
      border-radius: 8px;
      width: 760px;
      max-width: 95%;
    }
    canvas { display:block; height:520px; }
  </style>
</head>
<body>
  <div class="card">
    <canvas id="myPie"></canvas>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script>
    const labels = ['Kategori A', 'Kategori B', 'Kategori C'];
    const values = [329, 106, 32];
    const colors = ['#3234d9', '#2ec4b6', '#b76aa6'];

    const outsideLabelPlugin = {
      id: 'outsideLabels',
      afterDraw(chart, args, options) {
        const {ctx} = chart;
        const dataset = chart.data.datasets[0];
        const meta = chart.getDatasetMeta(0);
        const total = dataset.data.reduce((a,b)=>a+b,0);

        ctx.save();
        const lineColor = options.lineColor || '#6b7280';
        const textColor = options.textColor || '#111827';
        const fontSize = options.fontSize || 13;
        const baseLineLength = options.lineLength || 20;
        const labelPadding = options.labelPadding || 8;
        ctx.font = fontSize + 'px Arial';
        ctx.textBaseline = 'middle';

        meta.data.forEach((arc, i) => {
          const value = dataset.data[i];
          const percent = (value / total) * 100;
          const midAngle = (arc.startAngle + arc.endAngle) / 2;

          const cx = arc.x;
          const cy = arc.y;
          const r = arc.outerRadius;

          // Üst/alt kısımda çizgiyi kısa tut
          const angleDeg = midAngle * (180 / Math.PI);
          let lineLength = baseLineLength;
          if (angleDeg < -60 || angleDeg > 60) {
            lineLength = baseLineLength - 6; 
          }

          const sx = cx + Math.cos(midAngle) * (r * 0.92);
          const sy = cy + Math.sin(midAngle) * (r * 0.92);
          const ex = cx + Math.cos(midAngle) * (r + lineLength);
          const ey = cy + Math.sin(midAngle) * (r + lineLength);

          const alignRight = Math.cos(midAngle) >= 0;
          const hx = ex + (alignRight ? labelPadding : -labelPadding);

          ctx.beginPath();
          ctx.strokeStyle = lineColor;
          ctx.lineWidth = 1;
          ctx.moveTo(sx, sy);
          ctx.lineTo(ex, ey);
          ctx.lineTo(hx, ey);
          ctx.stroke();

          const text = `${value} (${percent.toFixed(2)}%)`;
          ctx.fillStyle = textColor;
          ctx.textAlign = alignRight ? 'left' : 'right';
          const tx = hx + (alignRight ? 6 : -6);
          ctx.fillText(text, tx, ey);
        });

        ctx.restore();
      }
    };

    Chart.register(outsideLabelPlugin);

    const ctx = document.getElementById('myPie').getContext('2d');
    new Chart(ctx, {
      type: 'pie',
      data: {
        labels: labels,
        datasets: [{
          data: values,
          backgroundColor: colors,
          borderWidth: 0
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        layout: {
          padding: 40 // üst/alt/sağ/sol boşluk
        },
        plugins: {
          legend: {
            display: true,
            position: 'right',
            labels: {
              boxWidth: 16,
              padding: 12
            }
          },
          tooltip: {
            callbacks: {
              label: function(context) {
                const v = context.raw;
                const total = context.dataset.data.reduce((a,b)=>a+b,0);
                const pct = (v / total) * 100;
                return `${v} — ${pct.toFixed(2)}%`;
              }
            }
          },
          outsideLabels: {
            lineColor: '#6b7280',
            textColor: '#111827',
            fontSize: 13,
            lineLength: 22,
            labelPadding: 12
          }
        }
      }
    });
  </script>
</body>
</html>

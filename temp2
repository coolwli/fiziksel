# Parametreleri tanımla
$vCenter = "your-vcenter-server"
$username = "your-username"
$password = "your-password"
$serverName = "your-server-name"

# Ana betiği çağırarak bağlantıyı başlat
powershell -File "C:\path\to\connect-vcenter.ps1" -vCenter $vCenter -username $username -password $password

# İşlem betiğini çağırarak işlemi gerçekleştir
powershell -File "C:\path\to\perform-task.ps1" -serverName $serverName

# Diğer işlemler için aynı bağlantıyı kullanarak farklı betikler çağırılabilir
# Örneğin:
# powershell -File "C:\path\to\another-task.ps1" -someOtherParameter $value

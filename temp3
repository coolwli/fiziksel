using Excel = Microsoft.Office.Interop.Excel;
using System.Runtime.InteropServices;

namespace ExcelReaderExample
{
    public class ExcelReader
    {
        public DataTable ReadExcel(string filePath)
        {
            Excel.Application excelApp = new Excel.Application();
            Excel.Workbook excelWorkbook = excelApp.Workbooks.Open(filePath);
            Excel._Worksheet excelWorksheet = excelWorkbook.Sheets[1];
            Excel.Range excelRange = excelWorksheet.UsedRange;

            DataTable dataTable = new DataTable();

            try
            {
                int rowCount = excelRange.Rows.Count;
                int colCount = excelRange.Columns.Count;

                // Sütun başlıklarını ekleme
                for (int j = 1; j <= colCount; j++)
                {
                    dataTable.Columns.Add((string)(excelRange.Cells[1, j] as Excel.Range).Value);
                }

                // Verileri ekleme
                for (int i = 2; i <= rowCount; i++)
                {
                    DataRow dataRow = dataTable.NewRow();
                    for (int j = 1; j <= colCount; j++)
                    {
                        dataRow[j - 1] = (excelRange.Cells[i, j] as Excel.Range).Value;
                    }
                    dataTable.Rows.Add(dataRow);
                }
            }
            finally
            {
                Marshal.ReleaseComObject(excelRange);
                Marshal.ReleaseComObject(excelWorksheet);
                excelWorkbook.Close();
                Marshal.ReleaseComObject(excelWorkbook);
                excelApp.Quit();
                Marshal.ReleaseComObject(excelApp);
            }

            return dataTable;
        }
    }
}

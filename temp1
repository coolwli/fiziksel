using System;
using System.Threading.Tasks;
using System.Web;
using System.Net.Http;
using System.Text;
using System.Xml.Linq;
using System.Configuration;
using System.Linq;
using System.Web.Script.Serialization;

namespace vminfo
{
    public class TokenManager
    {
        private static readonly string Pendik_TokenCacheKey = "PendikToken";
        private static readonly string Ankara_TokenCacheKey = "AnkaraToken";
        private const string OpsNamespace = "http://webservice.vmware.com/vRealizeOpsMgr/1.0/";
        private static readonly TimeSpan TokenLifetime = TimeSpan.FromHours(3);
        private const int MaxRetryAttempts = 3;
        private const int RetryDelayMilliseconds = 3000;

        private static readonly string Username = ConfigurationManager.AppSettings["VropsUsername"];
        private static readonly string Password = ConfigurationManager.AppSettings["VropsPassword"];

        public static async Task<string> GetPendikTokenAsync(string vropsServer,HttpClient http)
        {
            var token = HttpRuntime.Cache[Pendik_TokenCacheKey] as string;
            if (token == null || DateTime.Now >= (DateTime)HttpRuntime.Cache[Pendik_TokenCacheKey + "_Expiry"])
            {
                try
                {
                    string tokenXml = await AcquireTokenAsync(vropsServer,http);
                    if (tokenXml == null) return "Şu anlık verileri gösteremiyoruz lütfen daha sonra tekrar dene";
                    token = ExtractTokenFromXml(tokenXml);
                    HttpRuntime.Cache.Insert(
                        Pendik_TokenCacheKey,
                        token,
                        null,
                        DateTime.Now.Add(TokenLifetime),
                        System.Web.Caching.Cache.NoSlidingExpiration);
                    HttpRuntime.Cache.Insert(
                        Pendik_TokenCacheKey + "_Expiry",
                        DateTime.Now.Add(TokenLifetime),
                        null,
                        DateTime.Now.Add(TokenLifetime),
                        System.Web.Caching.Cache.NoSlidingExpiration);
                }
                catch (Exception ex)
                {
                    throw new Exception($"Token alım hatası: {ex.Message}", ex);
                }
            }
            return token;
        }

        public static async Task<string> GetAnkaraTokenAsync(string vropsServer,HttpClient http)
        {
            var token = HttpRuntime.Cache[Ankara_TokenCacheKey] as string;
            if (token == null || DateTime.Now >= (DateTime)HttpRuntime.Cache[Ankara_TokenCacheKey + "_Expiry"])
            {
                try
                {
                    string tokenXml = await AcquireTokenAsync(vropsServer,http);
                    if (tokenXml == null) return "Şu anlık verileri gösteremiyoruz lütfen daha sonra tekrar dene";
                    token = ExtractTokenFromXml(tokenXml);
                    HttpRuntime.Cache.Insert(
                        Ankara_TokenCacheKey,
                        token,
                        null,
                        DateTime.Now.Add(TokenLifetime),
                        System.Web.Caching.Cache.NoSlidingExpiration);
                    HttpRuntime.Cache.Insert(
                        Ankara_TokenCacheKey + "_Expiry",
                        DateTime.Now.Add(TokenLifetime),
                        null,
                        DateTime.Now.Add(TokenLifetime),
                        System.Web.Caching.Cache.NoSlidingExpiration);
                }
                catch (Exception ex)
                {
                    throw new Exception($"Token alım hatası: {ex.Message}", ex);
                }
            }
            return token;
        }

        private static async Task<string> AcquireTokenAsync(string vropsServer,HttpClient http)
        {
            var requestUri = $"{vropsServer}/suite-api/api/auth/token/acquire?_no_links=true";
            var requestBody = new
            {
                username = Username,
                password = Password
            };
            var jsonContent = new JavaScriptSerializer().Serialize(requestBody);
            var content = new StringContent(jsonContent, Encoding.UTF8, "application/json");

            for (int attempt = 0; attempt < MaxRetryAttempts; attempt++)
            {
                try
                {
                    var response = await http.PostAsync(requestUri, content);

                    if (response.IsSuccessStatusCode)
                    {
                        return await response.Content.ReadAsStringAsync();
                    }
                    else
                    {
                        var errorContent = await response.Content.ReadAsStringAsync();
                        throw new Exception($"Failed to retrieve token: {response.ReasonPhrase}, {errorContent}");
                    }
                }
                catch (Exception)
                {
                    await Task.Delay(RetryDelayMilliseconds);
                }
            }
            return null;
            
        }
        private static string ExtractTokenFromXml(string xmlData)
        {
            var xdoc = XDocument.Parse(xmlData);
            var tokenElement = xdoc.Descendants(XName.Get("token", OpsNamespace)).FirstOrDefault();
            return tokenElement?.Value;
        }
    }
}
